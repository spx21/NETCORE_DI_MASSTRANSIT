@{
    ViewBag.Title = "Create Partner";
    Layout = "~/Areas/BackOffice/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron" data-pages="parallax">
    <div class=" container-fluid container-fixed-lg sm-p-l-0 sm-p-r-0">
        <div class="inner">
            <!-- START BREADCRUMB -->
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="#">Partners</a></li>
                <li class="breadcrumb-item active"><a href="#">Create</a></li>
            </ol>
            <!-- END BREADCRUMB -->
        </div>
    </div>
</div>

<div class="container-fluid container-fixed-lg">
    <div class="row">
        <div class="col-lg-8">
            <div class="card card-default">
                <div class="card-header ">
                    <h3>Create Partner</h3>
                </div>
                <div class="card-block">
                    <form class="k-form" name="partnerForm" ng-submit="submit(partnerForm.$invalid)">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="k-form-field">
                                    <span>Code</span>
                                    <input class=" k-textbox" ng-model="partner.Code" required placeholder="Code" />
                                </div>
                                <div class="k-form-field">
                                    <span>Name</span>
                                    <input class=" k-textbox" value="" ng-model="partner.Name" required placeholder="Name" />
                                </div>

                                <div class="k-form-field">
                                    <span>Type</span>
                                    <input class="form-control" id="partnerType" partner-type-dropdown settings="dropdownSettings" ng-model="partner.PartnerType" placeholder="Partner Type" />
                                </div>

                                <div class="k-form-field">
                                    <span>Country</span>
                                    <input class="form-control" id="country" country-iso-dropdown settings="dropdownSettings" ng-model="partner.CountryIsoCode2" placeholder="Country ISO" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="k-form-field">
                                    <span>State</span>
                                    <input class="k-textbox" value="" ng-model="partner.State" placeholder="State" />
                                </div>
                                <div class="k-form-field">
                                    <span>City</span>
                                    <input class=" k-textbox" value="" ng-model="partner.City" placeholder="City" />
                                </div>
                                <div class="k-form-field">
                                    <span>Address</span>
                                    <input class=" k-textbox" value="" ng-model="partner.Address" placeholder="Address" />
                                </div>
                            </div>
                        </div>

                        <div class="row" style="margin-top:20px;">
                            <div class="text-left margin-top-20">
                                <div>
                                    <a type="button" class="k-button" ui-sref="partners">Cancel</a>
                                    <button type="submit" class="k-button k-primary" ng-disabled="partnerForm.$invalid || isProcessing">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

