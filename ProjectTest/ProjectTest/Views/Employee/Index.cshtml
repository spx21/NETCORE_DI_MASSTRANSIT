@{
    ViewBag.Title = "Partners";
    Layout = "~/Areas/BackOffice/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron" data-pages="parallax">
    <div class=" container-fluid container-fixed-lg sm-p-l-0 sm-p-r-0">
        <div class="inner">
            <!-- START BREADCRUMB -->
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="#">Partners</a></li>
            </ol>
            <!-- END BREADCRUMB -->
        </div>
    </div>
</div>

<div class="container-fluid container-fixed-lg">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-default">
                <div class="card-header ">
                    <div class="card-title">
                        Partner Lists
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-12">
                        <a id="primaryTextButton" class="k-primary k-button" data-role="button" role="button" aria-disabled="false" tabindex="0" ui-sref="partner-create({id:id})">Add New Partner</a>
                        <div class="pull-right">
                            <a id="iconTextButton">Filter</a>
                            <a id="kendoIconTextButton">Clear Filter</a>
                            <em id="iconButton"></em>
                        </div>
                    </div>
                    <div class="col-md-12  margin-top-20">
                        <div ui-grid="vm.gridOptions" class="myGrid"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
